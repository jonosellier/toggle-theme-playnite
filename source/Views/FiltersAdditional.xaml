<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type FiltersAdditional}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type FiltersAdditional}">
                    <Border
                        Width="{DynamicResource FilterPanelWidth}"
                        Margin="-56,-96,-8,0"
                        Padding="64,8,8,8"
                        Background="{DynamicResource OverlayMenuBackgroundBrush}"
                        BorderBrush="{DynamicResource DefaultBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="16">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="10"
                                Direction="315"
                                Opacity="0.5"
                                ShadowDepth="5"
                                Color="Black" />
                        </Border.Effect>
                        <DockPanel x:Name="PART_MenuHost">
                            <ButtonEx
                                x:Name="PART_ButtonBack"
                                Margin="15,5,15,5"
                                BorderThickness="2"
                                DockPanel.Dock="Top">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource FontIcoFont}"
                                            FontSize="20"
                                            Text="&#xeab5;" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{DynamicResource TextBlockBaseStyle}"
                                            Text="{DynamicResource LOCFilters}" />
                                    </StackPanel>
                                </Button.Content>
                            </ButtonEx>
                            <ItemsControlEx
                                x:Name="PART_ItemsHost"
                                DockPanel.Dock="Top"
                                Focusable="False"
                                KeyboardNavigation.DirectionalNavigation="Once" />
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
