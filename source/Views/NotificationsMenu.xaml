<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="NotificationsMenuBorder"
           TargetType="Border">
        <Setter Property="Background"
                Value="{DynamicResource OverlayMenuBackgroundBrush}"/>
        <Setter Property="Width"
                Value="600"/>
        <Setter Property="HorizontalAlignment"
                Value="Left"/>
        <Setter Property="Margin"
                Value="16"/>
        <Setter Property="CornerRadius"
                Value="16"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black"
                                  Direction="315"
                                  ShadowDepth="5"
                                  Opacity="0.5"
                                  BlurRadius="10"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding"
                Value="16"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <Int32Animation Storyboard.TargetProperty="(Grid.Column)"
                                        Duration="0:0:0"
                                        To="0"/>
                        <Int32Animation Storyboard.TargetProperty="(Grid.ColumnSpan)"
                                        Duration="0:0:0"
                                        To="2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="NotificationsMenuItemButton"
           BasedOn="{StaticResource {x:Type ButtonEx}}"
           TargetType="ButtonEx">
        <Setter Property="Margin"
                Value="10,5,10,5"/>
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Foreground"
                Value="{DynamicResource TextBrush}"/>
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="SnapsToDevicePixels"
                Value="True"/>
        <Setter Property="Padding"
                Value="12,5,12,5"/>
        <Setter Property="HorizontalContentAlignment"
                Value="Left"/>
        <Setter Property="VerticalContentAlignment"
                Value="Center"/>
        <Setter Property="BorderBrush"
                Value="{DynamicResource SelectionLightBrush}"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>

                        <Border BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{DynamicResource ControlBackgroundBrush}"
                                x:Name="BorderStandard"
                                CornerRadius="8"/>

                        <Border x:Name="BorderFocus"
                                Margin="-3"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                BorderBrush="{DynamicResource TextBrush}"
                                BorderThickness="3"
                                Visibility="Hidden"
                                CornerRadius="8"/>
                        <TextBlock x:Name="Text"
                                   Style="{DynamicResource TextBlockBaseStyle}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   Margin="{TemplateBinding Padding}">                            
                                <ContentPresenter/>
                        </TextBlock>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Opacity"
                                    Value="0.5"/>
                        </Trigger>
                        <Trigger Property="IsFocused"
                                 Value="True">
                            <Setter Property="Visibility"
                                    Value="Visible"
                                    TargetName="BorderFocus"/>
                            <Setter Property="Visibility"
                                    Value="Hidden"
                                    TargetName="BorderStandard"/>
                            <Setter Property="Foreground"
                                    Value="{DynamicResource ControlBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Visibility"
                                    Value="Visible"
                                    TargetName="BorderFocus"/>
                            <Setter Property="Visibility"
                                    Value="Hidden"
                                    TargetName="BorderStandard"/>
                            <Setter Property="Foreground"
                                    Value="{DynamicResource ControlBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Foreground"
                                    Value="{DynamicResource TextBrushDark}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NotificationsMenuDismissButton"
           BasedOn="{StaticResource {x:Type ButtonEx}}"
           TargetType="ButtonEx">
        <Setter Property="Margin"
                Value="10,5,10,20"/>
    </Style>

    <Style x:Key="NotificationsMenuHeaderText"
           BasedOn="{StaticResource TextBlockBaseStyle}"
           TargetType="TextBlock">
        <Setter Property="FontFamily"
                Value="{DynamicResource FontDefault}"/>
        <Setter Property="FontSize"
                Value="36"/>
        <Setter Property="HorizontalAlignment"
                Value="Left"/>
        <Setter Property="Margin"
                Value="0,0,20,0"/>
    </Style>
</ResourceDictionary>