<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="NotificationsMenuBorder" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource OverlayMenuBackgroundBrush}" />
        <Setter Property="Width" Value="600" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="16" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" 
                                 Direction="315" 
                                 ShadowDepth="5" 
                                 Opacity="0.5" 
                                 BlurRadius="10"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="16" />
        <Style.Triggers>
            <EventTrigger RoutedEvent="Window.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <Int32Animation Storyboard.TargetProperty="(Grid.Column)"
                            Duration="0:0:0"
                            To="0"/>
                        <Int32Animation Storyboard.TargetProperty="(Grid.ColumnSpan)"
                            Duration="0:0:0"
                            To="2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="NotificationsMenuItemButton" BasedOn="{StaticResource {x:Type ButtonEx}}" TargetType="ButtonEx">
        <Setter Property="Margin" Value="10,5,10,5" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <Style x:Key="NotificationsMenuDismissButton" BasedOn="{StaticResource {x:Type ButtonEx}}" TargetType="ButtonEx">
        <Setter Property="Margin" Value="10,5,10,20" />
    </Style>

    <Style x:Key="NotificationsMenuHeaderText" BasedOn="{StaticResource TextBlockBaseStyle}" TargetType="TextBlock" >
        <Setter Property="FontFamily" Value="{DynamicResource FontDefault}" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,0,20,0" />
    </Style>
</ResourceDictionary>