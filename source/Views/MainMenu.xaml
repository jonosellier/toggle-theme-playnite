                       VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="{DynamicResource LOCSettingsLabel}" FontSize="36" VerticalAlignment="Center" />
        </StackPanel>
    </DataTemplate>

