<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button">
        <Setter Property="FocusVisualStyle"
                Value="{x:Null}"/>
        <Setter Property="Foreground"
                Value="{DynamicResource TextBrush}"/>
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="SnapsToDevicePixels"
                Value="True"/>
        <Setter Property="Padding"
                Value="12,5,12,5"/>
        <Setter Property="HorizontalContentAlignment"
                Value="Left"/>
        <Setter Property="VerticalContentAlignment"
                Value="Center"/>
        <Setter Property="BorderBrush"
                Value="{DynamicResource SelectionLightBrush}"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>

                        <Border BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Background="{DynamicResource ControlBackgroundBrush}"
                                x:Name="BorderStandard"
                                CornerRadius="8"/>

                        <Border x:Name="BorderFocus"
                                Margin="-3"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                BorderBrush="{DynamicResource TextBrush}"
                                BorderThickness="3"
                                Visibility="Hidden"
                                CornerRadius="8"
                                Background="{DynamicResource TextBrush}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  Direction="315"
                                                  ShadowDepth="5"
                                                  Opacity="0.5"
                                                  BlurRadius="10"/>
                            </Border.Effect>
                        </Border>
                        <TextBlock x:Name="Text"
                                   Style="{DynamicResource TextBlockBaseStyle}"
                                   Foreground="{TemplateBinding Foreground}"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                   Margin="{TemplateBinding Padding}">                            
                                <ContentPresenter/>
                        </TextBlock>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Opacity"
                                    Value="0.5"/>
                        </Trigger>
                        <Trigger Property="IsFocused"
                                 Value="True">
                            <Setter Property="Visibility"
                                    Value="Visible"
                                    TargetName="BorderFocus"/>
                            <Setter Property="Visibility"
                                    Value="Hidden"
                                    TargetName="BorderStandard"/>
                            <Setter Property="Foreground"
                                    Value="{DynamicResource MainBackgourndBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Visibility"
                                    Value="Visible"
                                    TargetName="BorderFocus"/>
                            <Setter Property="Visibility"
                                    Value="Hidden"
                                    TargetName="BorderStandard"/>
                            <Setter Property="Foreground"
                                    Value="{DynamicResource MainBackgourndBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Foreground"
                                    Value="{DynamicResource TextBrushDark}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

